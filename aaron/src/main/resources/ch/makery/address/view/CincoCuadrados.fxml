<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane xmlns="http://javafx.com/javafx/19.0.2.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.aaron.controllers.CincoCuadradosController"
            styleClass="root-pane">

    <GridPane fx:id="grid"
              AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20"
              AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20"
              hgap="20" vgap="20" alignment="CENTER">
        <!-- 4 columnas iguales -->
        <columnConstraints>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
        </columnConstraints>
        <!-- 2 filas iguales -->
        <rowConstraints>
            <RowConstraints percentHeight="50"/>
            <RowConstraints percentHeight="50"/>
        </rowConstraints>

        <!-- Ocho mesas como botones -->
        <children>
            <Button fx:id="table1" text="M1"
                    styleClass="table-button"
                    onAction="#handleTableClick"
                    GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Button fx:id="table2" text="M2"
                    styleClass="table-button"
                    onAction="#handleTableClick"
                    GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Button fx:id="table3" text="M3"
                    styleClass="table-button"
                    onAction="#handleTableClick"
                    GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <Button fx:id="table4" text="M4"
                    styleClass="table-button"
                    onAction="#handleTableClick"
                    GridPane.rowIndex="0" GridPane.columnIndex="3"/>

            <Button fx:id="table5" text="M5"
                    styleClass="table-button"
                    onAction="#handleTableClick"
                    GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Button fx:id="table6" text="M6"
                    styleClass="table-button"
                    onAction="#handleTableClick"
                    GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Button fx:id="table7" text="M7"
                    styleClass="table-button"
                    onAction="#handleTableClick"
                    GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            <Button fx:id="table8" text="M8"
                    styleClass="table-button"
                    onAction="#handleTableClick"
                    GridPane.rowIndex="1" GridPane.columnIndex="3"/>
        </children>
    </GridPane>
</AnchorPane>
